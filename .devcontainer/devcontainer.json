{
  "name": "accountability-app",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": [
        "msjsdiag.vscode-react-native",
        "dbaeumer.vscode-eslint",
        "ms-vscode.vscode-typescript-next",
        "streetsidesoftware.code-spell-checker",
        "Anthropic.claude-code",
        "Graphite.gti-vscode"
        "Anthropic.claude-code",
        "Graphite.gti-vscode"
      ],
      "settings": {
        "editor.formatOnSave": true
      }
    }
  },
  "postCreateCommand": "npm install",
  "forwardPorts": [8081, 54321, 54322, 54323, 54324],
  "portsAttributes": {
    "8081": {
      "label": "Metro Bundler",
      "onAutoForward": "silent"
    },
    "54321": {
      "label": "Supabase API",
      "onAutoForward": "silent"
    },
    "54322": {
      "label": "Supabase DB",
      "onAutoForward": "silent"
    },
    "54323": {
      "label": "Supabase Studio",
      "onAutoForward": "notify"
    },
    "54324": {
      "label": "Supabase Inbucket",
      "onAutoForward": "silent"
    }
  },
  "features": {
    "ghcr.io/anthropics/devcontainer-features/claude-code:latest": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    }
  },
  "runArgs": ["--env-file", ".env"],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "mounts": [
    "source=${env:HOME}/.ssh,target=/root/.ssh,type=bind",
    "source=graphite-config,target=/root/.config/graphite,type=volume",
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-code-config-${devcontainerId},target=/home/node/.claude,type=volume",
    "source=supabase-config-${devcontainerId},target=/root/.supabase,type=volume"
  ],
}
