{
  "name": "accountability-app",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": [
        "msjsdiag.vscode-react-native",
        "dbaeumer.vscode-eslint",
        "ms-vscode.vscode-typescript-next",
        "streetsidesoftware.code-spell-checker",
        "Anthropic.claude-code",
        "Graphite.gti-vscode",
        "Anthropic.claude-code"
      ],
      "settings": {
        "editor.formatOnSave": true
      }
    }
  },
  "postCreateCommand": "npm install",
  "features": {
    "ghcr.io/anthropics/devcontainer-features/claude-code:latest": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    }
  },
  "runArgs": [
    "--env-file",
    ".env",
    "-p",
    "0.0.0.0:8081:8081",
    "-p",
    "0.0.0.0:54321:54321"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "mounts": [
    "source=${env:HOME}/.ssh,target=/root/.ssh,type=bind",
    "source=${env:HOME}/.expo,target=/root/.expo,type=bind",
    "source=graphite-config,target=/root/.config/graphite,type=volume",
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-code-config-${devcontainerId},target=/home/node/.claude,type=volume",
    "source=supabase-config-${devcontainerId},target=/root/.supabase,type=volume"
  ]
}
